<aura:component controller="ListTeliaPostcodesController" access="global">
   <aura:attribute name="postcodes" type="Telia_Postcode__c[]" />
   <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
   <div class="row">
      <div class="col-sm-6">Postinumero</div>
      <div class="col-sm-6">
         <ui:inputSelect aura:id="postcodes" multiple="false" change="{!c.onSelectPostcodeChange}" >
            <ui:inputSelectOption text="Kaikki postinumerot" disabled="true"/>
            <aura:iteration items="{!v.postcodes}" var="postcode">
               <ui:inputSelectOption text="{!postcode.Postcode__c}" label="{!postcode.Postcode__c}" />
            </aura:iteration>
         </ui:inputSelect>   
      </div>
  </div>
  <div class="row">
      <div class="col-sm-6">Paikkakunta</div>
      <div class="col-sm-6">
          <ui:inputText aura:id="detectedCity" disabled="true"/>
      </div>
  </div>
</aura:component>